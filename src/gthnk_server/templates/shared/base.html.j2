<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/static/favicon.ico" type="image/x-icon" />

    <meta name="theme-color" content="#272b30">
    <meta name="msapplication-navbutton-color" content="#272b30">
    <meta name="apple-mobile-web-app-status-bar-style" content="#272b30">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">

    <title>{% block title %}{% endblock %}</title>

    <!-- jquery -->
    <script src="/static/lib/jquery/jquery-3.5.1.min.js"></script>

    {# <!-- bootstrap -->
    <link rel="stylesheet" href="/static/lib/bootstrap/bootstrap-4.4.1-dist/css/bootstrap.min.css" />
    <script src="/static/lib/bootstrap/bootstrap-4.4.1-dist/js/bootstrap.min.js"></script> #}

    <!-- bootstrap-dark -->
    <link rel="stylesheet" href="/static/lib/bootstrap-dark/css/bootstrap-dark.min.css" />
    <link rel="stylesheet" href="/static/lib/bootstrap-dark/css/toggle-bootstrap.min.css" />
    <link rel="stylesheet" href="/static/lib/bootstrap-dark/css/toggle-bootstrap-dark.min.css" />
    <script src="/static/lib/bootstrap-dark/js/bootstrap.min.js"></script>

    <!-- fontawesome -->
    <link rel="stylesheet" href="/static/lib/fontawesome/fontawesome-free-5.13.0-web/css/all.min.css" />
    <script src="/static/lib/fontawesome/fontawesome-free-5.13.0-web/js/all.min.js"></script>

    <!-- moment.js -->
    <script src="/static/lib/moment/moment.min.js"></script>

    <!-- daterangepicker -->
    <script src="/static/lib/daterangepicker/daterangepicker.min.js"></script>
    <link rel="stylesheet" href="/static/lib/daterangepicker/daterangepicker.css" />

    <!-- filedrag -->
    <script src="/static/lib/filedrag/filedrag.js"></script>

    <!-- swiper -->
    <script src="/static/lib/swiper/swiper.js"></script>

    <!-- gthnk -->
    <link href="/static/css/gthnk.css" rel="stylesheet">

    <script src="/static/js/gthnk.js"></script>
    <script src="/static/js/gthnk-darkmode.js"></script>

</head>

<body id="{{current_page}}" class="bootstrap-dark">
    <script src="/static/js/gthnk-darkmode.js"></script>

    {% include "shared/navigation.html.j2" %}
    
    {% with messages = get_flashed_messages() %}
    <div aria-live="polite" aria-atomic="true" style="position: relative;">
        <div style="position: absolute; top: 1em; right: 1em;">

        {% for message in messages %}
            <div class="toast fade" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                <i class="far fa-comment" style="color: blue;"></i>&nbsp;

                <!-- <svg class="bd-placeholder-img rounded mr-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"> -->
                    <!-- <rect width="100%" height="100%" fill="#007aff"></rect> -->
                <!-- </svg> -->
                
                <strong class="mr-auto">Gthnk</strong>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="toast-body">
                    {{ message }}
                </div>
            </div>    
        </div>
      {% endfor %}
    </div>
    </div>
    {% endwith %}

    {% block content %}
    {% endblock %}

    <div class="container" id="footer">
        &nbsp;
        {# <p class="text-center mt-5">Gthnk</p> #}
    </div>
</body>

</html>