{% extends 'base.html.j2' %}

{% set current_page = 'day-view' %}

{# Enable or disable attachments here#}
{% set attachments_enabled = False %}

{% block content %}

<div id="backdrop" class="container">

  <div class="row">
    {% if attachments_enabled %}
    <div class="col-xl-9">
    {% else %}
    <div class="col-xl-1"></div>
    <div class="col-xl-10">
    {% endif %}

      <a id="entries_anchor" name="entries_anchor"></a>

      <div class="gthnk-card" id="entries">
        <p id="day-of-week">{% if is_buffer %}(buffer){% else %}{{ day_of_week }}{% endif %}</p>
        {{ day_str|safe }}
      </div>

    </div>

    {% if attachments_enabled %}
    <div class="col-xl-3">
      <!-- attachments -->
      {% include "attachments/page-gutter.html.j2" %}
    </div>
    {% else %}
    <div class="col-xl-1"></div>
    {% endif %}

  </div>

</div>

<script>
  var today = "{{ date }}";
</script>

<!-- inter-day navigation -->
<script>
  {% if day and day.yesterday %}
  var yesterday = "{{day.yesterday.datestamp}}";
  {% else %}
  var yesterday = null;
  {% endif %}

  {% if day and day.tomorrow %}
  var tomorrow = "{{day.tomorrow.datestamp}}";
  {% else %}
  var tomorrow = null;
  {% endif %}
</script>

{% if is_buffer %}
<script src="/day/static/gthnk-live-update.js"></script>
{% endif %}

<script src="/day/static/gthnk-images.js"></script>
<script src="/day/static/gthnk-navigate.js"></script>

{% endblock %}
